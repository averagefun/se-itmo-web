<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                                  http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <managed-bean>
        <managed-bean-name>timeKeeper</managed-bean-name>
        <managed-bean-class>beans.TimeKeeper</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>results</managed-bean-name>
        <managed-bean-class>beans.ResultBean</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>resultDao</managed-bean-name>
        <managed-bean-class>database.ResultDaoImplementation</managed-bean-class>
        <managed-bean-scope>none</managed-bean-scope>
    </managed-bean>

    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <description>Main page</description>
            <from-outcome>main</from-outcome>
            <to-view-id>/main.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/main.xhtml</from-view-id>
        <navigation-case>
            <description>Start page</description>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <description>Main page</description>
            <from-outcome>redirect</from-outcome>
            <to-view-id>/main.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
</faces-config>